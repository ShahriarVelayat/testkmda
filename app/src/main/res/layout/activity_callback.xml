<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.komodaa.app.activities.CallbackActivity">


        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_tick" />

        <TextView
            android:id="@+id/tvStatus"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="خرید موفق!"
            android:textSize="20sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="16dp">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:textSize="18sp" />
        </android.support.v7.widget.CardView>


        <ImageView
            android:id="@+id/komoLooloo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/komolooloo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.rey.material.widget.Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="#16c76d"
                android:text="بازگشت"
                android:textColor="#ffffff"

                app:rd_enable="true"
                app:rd_rippleType="wave" />

            <com.rey.material.widget.Button
                android:id="@+id/btnHelp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@color/btn_bg"
                android:text="اطلاعات بیشتر"
                android:textColor="#ffffff"
                android:visibility="gone"
                app:rd_enable="true"
                app:rd_rippleType="wave" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>